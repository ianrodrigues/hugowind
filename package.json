{
  "scripts": {
    "serve": "cross-env NODE_ENV=development concurrently \"postcss resources/css/theme.css -o static/css/theme.css --watch\"  \"live-server ./public\"",
    "development": "cross-env NODE_ENV=development postcss resources/css/theme.css -o static/css/theme.css",
    "production": "cross-env NODE_ENV=production postcss resources/css/theme.css -o static/css/theme.css",
    "start": "npm run serve"
  },
  "dependencies": {
    "@tailwindcss/ui": "^0.3.0",
    "autoprefixer": "^9.5.1",
    "tailwindcss": "^1.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "live-server": "^1.2.1",
    "postcss-cli": "^6.1.2"
  }
}
